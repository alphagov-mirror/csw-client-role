{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "VisualEditor0",
            "Effect": "Allow",
            "Action": [
                "support:*"
            ],
            "Resource": "*"
        },
        {
            "Sid": "VisualEditor1",
            "Effect": "Allow",
            "Action": [
                "iam:GetRole",
                "iam:ListRoles",
                "iam:GetRolePolicy"
            ],
            "Resource": "arn:aws:iam::${account_id}:role/${prefix}_CstSecurityInspectorRole"
        },
        {
            "Sid": "VisualEditor2",
            "Effect": "Allow",
            "Action": [
                "iam:GetPolicy",
                "iam:GetRolePolicy",
                "iam:GetPolicyVersion"
            ],
            "Resource": [
                "arn:aws:iam::${account_id}:policy/${prefix}_CstSecurityInspectorRolePolicy",
                "arn:aws:iam::${account_id}:role/${prefix}_CstSecurityInspectorRole"
            ]
        },
        {
            "Sid": "VisualEditor3",
            "Effect": "Allow",
            "Action": [
                "configservice:DescribeComplianceByConfigRule",
                "configservice:DescribeComplianceByResource",
                "configservice:DescribeConfigRuleEvaluationStatus",
                "configservice:DescribeConfigRules"
            ],
            "Resource": "*"
        },
        {
            "Sid": "VisualEditor4",
            "Effect": "Allow",
            "Action": [
                "iam:ListGroups",
                "iam:ListRoles",
                "iam:ListUsers",
                "iam:ListAttachedGroupPolicies",
                "iam:ListAttachedRolePolicies",
                "iam:ListAttachedUserPolicies"
            ],
            "Resource": [
                "arn:aws:iam::${account_id}:role/*",
                "arn:aws:iam::${account_id}:group/*",
                "arn:aws:iam::${account_id}:user/*",
                "arn:aws:iam::${account_id}:policy/*"
            ]
        },
        {
            "Sid": "VisualEditor5",
            "Effect": "Allow",
            "Action": [
                "ec2:DescribeSecurityGroups",
                "ec2:DescribeRegions"
            ],
            "Resource": "*"
        },
        {
            "Sid": "VisualEditor6",
            "Effect": "Allow",
            "Action": [
                "s3:ListAllMyBuckets",
                "s3:GetBucketAcl",
                "s3:GetBucketLogging",
                "s3:GetBucketPolicy",
                "s3:GetEncryptionConfiguration",
                "s3:GetBucketVersioning"
            ],
            "Resource": "arn:aws:s3:::*"
        },
        {
            "Sid": "VisualEditor7",
            "Effect": "Allow",
            "Action": [
                "sts:GetCallerIdentity"
            ],
            "Resource": "arn:aws:s3:::*"
        },
        {
            "Sid": "VisualEditor8",
            "Effect": "Allow",
            "Action": [
                "cloudtrail:DescribeTrails",
                "cloudtrail:GetTrailStatus"
            ],
            "Resource": "arn:aws:cloudtrail::${account_id}:*"
        }
    ]
}
